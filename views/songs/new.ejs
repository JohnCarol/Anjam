<%- include("../partials/header")%>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align:center">New Song</h1>
		<div style = "width: 30%; margin: 25px auto;">			
			<form method = "POST" action = "/songs" enctype="multipart/form-data">
				<div class = "form-group">
					<input class = "form-control" name = "name" type = "text" placeholder = "Name" required>
				</div>
				<div class = "form-group">
					<input class = "form-control" name = "bpm" type = "number" min="1" step="0.1" placeholder = "BPM" required>
				</div>				
				<div class = "form-group">
					<input type="file" name="filetoupload" required>
				</div>
				<div class = "form-group">
					<input type = "text" class = "form-control" placeholder = "Genre" name = "genre" required>
				</div>
				<div class = "form-group">
					<input type = "text" class = "form-control" placeholder = "Sub-Genre" name = "subgenre">
				</div>
				<div class = "form-group">
					<input type = "text" class = "form-control" placeholder = "Description" name = "description" required>
				</div>
				<div class = "form-group">
					<input class = "btn btn-lg btn-default btn-block btn-primary" type = "submit">
				</div>				
			</form>	
			
			<A href = "/songs">Back</A></div>			
	</div>		
</div>
<%- include("../partials/footer")%>