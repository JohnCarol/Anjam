<%- include("../partials/header")%>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align:center">Editing <%=song.name%></h1>
		<div style = "width: 30%; margin: 25px auto;">			
			<form method = "POST" action = "/songs/<%=song._id%>?_method=PUT">
				<div class = "form-group">
					<label for = "name">Song Name</label><input class = "form-control" name = "song[name]" type = "text" value = "<%=song.name%>" required>
				</div>
				<div class = "form-group">
					<label for = "bpm">BPM</label>
					<input class = "form-control" name = "song[bpm]" type = "number" min="1" step="0.1" value = "<%=song.bpm%>" required>
				</div>				
				<div class = "form-group">
					<label for = "genre">Genre</label>
					<input type = "text" class = "form-control" value = "<%=song.genre%>" name = "song[genre]" required>
				</div>
				<div class = "form-group">
					<label for = "subgenre">Sub Genre</label>
					<input type = "text" class = "form-control" value = "<%=song.subgenre%>" name = "song[subgenre]">
				</div>
				<div class = "form-group">
					<label for = "description">Description</label>
					<input type = "text" class = "form-control" value = "<%=song.description%>" name = "song[description]" required>
				</div>
				<div class = "form-group">
					<input class = "btn btn-lg btn-default btn-block btn-primary" type = "submit" value = "Update">
				</div>				
			</form>	
			
			<A href = "/songs/<%=song._id%>">Back</A></div>			
	</div>		
</div>
<%- include("../partials/footer")%>