<%- include("../partials/header")%>
<main class = "container">
		<section class = "col-md-12 thumbnail caption-full">
			<header class = "jumbotron">
				<% if (currentUser && currentUser.isActivated === true){%>
					<form  class = "pull-right" id = "download-form" action = "/song/<%= song._id %>/downloads" method = "POST">								
								<%let sdl = "Download";										
									if(currentUser)
									{
										let found = song.downloads.indexOf(currentUser._id);
										if(found !== -1)
										{
											sdl = "Song Downloaded"
										}
									}	
										%>
								<button class = "btn btn-normal downloadBtn">
									<%=sdl%>
								</button>
					</form>
				<%}%>
					<div class = "audio-player">				
						<div class = "mixbuttons">
							<h3><%=song.name %></h3>
							<audio class = "player" id="player_0" src="<%= song.fileUrl%>"></audio>
							
								<button class = "play"  name = "0"><span class = "glyphicon glyphicon-play sngBtns"></span></button>
								<button class = "pause"  name = "0"><span class = "glyphicon glyphicon-pause sngBtns"></span></button>	
								<button class = "stop"  name = "0"><span class = "glyphicon glyphicon-stop sngBtns"></span></button>
								<progress class = "progressbar" id ="seekbar_0" name ="0" value="0" max="1" style="width:99%;"></progress>
								
							<p class = "text-left">
								<small>Genre : <%=song.genre%><br>
										Subgenre : <%=song.subgenre%>
								</small>
							</p>
							<div class = "panel panel-default details">
								<div class = "panel-heading">
									<h3 class = "panel-title">
										Details	
									</h3>								
								</div>
								<div class = "panel-body">
									<small><%=song.description%></small>	
								</div>
							</div>
						</div>
					</div>
					<% if(isAdmin || (currentUser && song.author.id.equals(currentUser._id))){%>
							<a href = "/song/<%= song._id %>/edit" class = "btn btn-warning">Edit</a>
							<form id = "delete-form" action = "/song/<%= song._id %>?_method=DELETE" method = "POST">
								<button class = "btn btn-danger">							
									Delete
								</button>
							</form>
					<% }%>		
			</header>
			<div class = "well">	
			
					<% var x = 1;
						song.mixes.forEach(function(mix){
							let dl = "Download";					
					%>
					<div class = "row" id = "/song/<%=song._id%>/mixes/<%=mix._id%>">				
						<div class = "col-md-12">
							<div class = "thumbnail">					
								<div class = "caption-full">
								<div class = "sngTitle"><%= mix.name%></div>
								<div class = "mixbuttons mixbuttonsShow">
									<audio class = "player" id="player_<%=x%>" src="<%= mix.fileUrl%>"></audio>
									
							
									<button class = "play"  name = "<%=x%>"><span class = "glyphicon glyphicon-play sngBtns"></span></button>
									<button class = "pause"  name = "<%=x%>"><span class = "glyphicon glyphicon-pause sngBtns"></span></button>	
									<button class = "stop"  name = "<%=x%>"><span class = "glyphicon glyphicon-stop sngBtns"></span></button>
									
									<progress class = "progressbar" id ="seekbar_<%=x%>" name ="<%=x%>" value="0" max="1" style="width:99%;"></progress>
								<% if (currentUser && currentUser.isActivated === true){%>
									<form  class = "pull-right" id = "download-form" action = "/song/<%= song._id %>/mixes/<%=mix._id%>/downloads" method = "POST">							
										<%
										if(currentUser)
											{

												let found = mix.downloads.indexOf(currentUser._id);
												if(found !== -1)
												{
													dl = "Mix Downloaded";
												}
											}	
										%>
										<button class = "btn btn-sm btn-normal downloadBtn">
											<%=dl%>
										</button>
									</form>
								<%}%>
							</div>
								<% if(isAdmin || (currentUser && song.author.id.equals(currentUser._id))){%>
							<a class = "btn btn-xs btn-warning" 
							   href = "/song/<%=song._id%>/mixes/<%=mix._id%>/edit">
								Edit
							</a>
							
							<button class="btn btn-xs btn-danger delete-item" data-record-title="<%= mix.name%>" data-record-id="/song/<%=song._id%>/mixes/<%=mix._id%>?_method=DELETE" data-toggle="modal" data-target="#confirm-delete">
		  							Delete
							</button>
							
							<%}%>
							
						</div>
						</div>
						</div>		
					</div>		
					<% x++}) %>		
			        <% if(isAdmin || (currentUser && song.author.id.equals(currentUser._id))){%><div><a class = "btn btn-primary btn-large btn-block" href = "/song/<%=song.id%>/mixes/new">ADD A NEW MIX</a></div> <%}%>	
				
			</div>			
			
	
		
		
		<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
			<div class="modal-content">
			  <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
			  </div>
			  <div class="modal-body">
				<p>You are about to delete <b><i class="title"></i></b>, this cannot be undone.</p>
				<p>Do you want to proceed?</p>
			  </div>
			  <div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-danger btn-ok">Delete</button>
			  </div>
			</div>
		  </div>
		</div>		
	</section>
</main>
	<!--<script type="text/javascript" src = "/js/scripts.js"></script>-->
	<script type="text/javascript" src = "/js/player.js"></script>
	<script type="text/javascript" src = "/js/js.js"></script>
<%- include("../partials/footer")%>

