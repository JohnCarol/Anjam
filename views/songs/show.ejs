<%- include("../partials/header")%>
<div class = "container">
	<div class = "row">
		<div class = "col-md-3">
			<p class = "lead">ANJAM</p>
			<div class = "list-group">
				<li class = "list-group-item active">INFO 1</li>
				<li class = "list-group-item">INFO 2</li>
				<li class = "list-group-item">INFO 3</li>
			</div>
		</div>
		<div class = "col-md-9">
			<div class = "thumbnail">					
				<div class = "caption-full">
					 
					<h3><a><%=song.name %></a></h3>	
					<form  class = "pull-right" id = "download-form" action = "/songs/<%= song._id %>/downloads" method = "POST">								
								<%let sdl = "Download";	
									console.log("-->is curr" + currentUser);			

						 			if(currentUser)
									{
										let dlUsers = song.downloads.filter(item => item.userid.toHexString().indexOf(currentUser._id) !== -1);
									    if(dlUsers.length > 0)
											{
												sdl = "Downloaded"
											}}	
										%>
								<button class = "btn btn-normal">
									<%=sdl%>
								</button>
					</form>
					<div class = "mixbuttons" id = "<%= song.fileUrl%>">
						<button class = "play" name ='0'>Play</button>
						<button class = "pause" name='0'>Pause</button>
						<button class = "stop" name='0'>Stop</button>
						<button class = "volup" name='0'>Vol+</button>
						<button class = "voldown" name='0'>Vol-</button>
					</div>
					<p><%=song.description%></p>
					<p><em>Submitted By <%=song.author.username%></em></p>
					<% if(currentUser && song.author.id.equals(currentUser._id)){%>
							<a href = "/songs/<%= song._id %>/edit" class = "btn btn-warning">Edit</a>
							<form id = "delete-form" action = "/songs/<%= song._id %>?_method=DELETE" method = "POST">
								<button class = "btn btn-danger">							
									Delete
								</button>
							</form>
				</div>	<% }%>
			</div>
			
			<div class = "well">				
					<% var x = 1;
						var dl = "Download";
								

						song.mixes.forEach(function(mix){
					
					%>
					<div class = "row" id = "/songs/<%=song._id%>/mixes/<%=mix._id%>">				
						<div class = "col-md-12">
							<div class = "thumbnail">					
								<div class = "caption-full">
							<h5><%= mix.name%></h5>
							<form  class = "pull-right" id = "download-form" action = "/songs/<%= song._id %>/mixes/<%=mix._id%>/downloads" method = "POST">							
								<%
									
						 			if(currentUser)
									{
									
										let dlUsers = mix.downloads.filter(item => item.userid.toHexString().indexOf(currentUser._id) !== -1);
									    if(dlUsers.length > 0)
											{
													
												dl = "Downloaded"
												console.log(dl);
											}}	
										%>
								<button class = "btn btn-normal">
									<%=dl%>
								</button>
							</form>
							<div class = "mixbuttons" id = "<%= mix.fileUrl%>">
								<button class = "play"  name = "<%= x %>"><span class = "glyphicon glyphicon-play"></span></button>
								<button class = "pause"  name = "<%= x %>"><span class = "glyphicon glyphicon-pause"></span></button>
								<button class = "stop"  name = "<%= x %>"><span class = "glyphicon glyphicon-stop"></span></button>	
							</div>
							<span class = "pull-right"><%= mix.length%> || Download</span>
								<p><%= mix.description %></p>
								<% if(isAdmin || (currentUser && song.author.id.equals(currentUser._id))){%>
								<a class = "btn btn-xs btn-warning" 
								   href = "/songs/<%=song._id%>/mixes/<%=mix._id%>/edit">
								Edit
								</a>
							
								<button class="btn btn-xs btn-danger delete-item" data-record-title="<%= mix.name%>" data-record-id="/songs/<%=song._id%>/mixes/<%=mix._id%>?_method=DELETE" data-toggle="modal" data-target="#confirm-delete">
		  							Delete
								</button>
							
							<%}%>
							<hr>
						</div>
						</div>
						</div>		
					</div>		
					<% x++}) %>		
			        <% if(isAdmin || (currentUser && song.author.id.equals(currentUser._id))){%><div><a class = "btn btn-primary btn-large btn-block" href = "/songs/<%=song.id%>/mixes/new">ADD A NEW MIX</a></div> <%}%>	
				
			</div>			
			
		</div>
		
		
		<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
			<div class="modal-content">
			  <div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
				<h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
			  </div>
			  <div class="modal-body">
				<p>You are about to delete <b><i class="title"></i></b>, this cannot be undone.</p>
				<p>Do you want to proceed?</p>
			  </div>
			  <div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-danger btn-ok">Delete</button>
			  </div>
			</div>
		  </div>
		</div>		
	</div>
	<script type="text/javascript" src = "/js/scripts.js"></script>
	<script type="text/javascript" src = "/js/js.js"></script>
<%- include("../partials/footer")%>

