<%- include("./partials/header")%>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align:center">Reset Password</h1>
		<div style = "width: 30%; margin: 25px auto;">			
			<form method="POST" action = "/reset_password">				
				<div class = "form-group">
					<input class = "form-control" name = "username" type = "hidden" value = "<%=email%>">
				</div>	
				<div class = "form-group">
					<input id = "password" class = "form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" name = "password" type = "password" placeholder = "Password" required>
				</div>
				<div class = "form-group">
					<input id = "confirm_password" class = "form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" name = "confirm_password" type = "password" placeholder = "Confirm Password" required>
				</div>
				<div class = "form-group">
					<input class = "btn btn-lg btn-default btn-block btn-primary" type = "submit" value = "Reset Password">
				</div>
			</form>			
	</div>		
</div>
<script type="text/javascript" src = "/js/register.js"></script>
<%- include("./partials/footer")%>