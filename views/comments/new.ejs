<%- include("../partials/header")%>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align:center">Adding New Comment to <%= campground.name %></h1>
		<div style = "width: 30%; margin: 25px auto;">
			<form method = "POST" action = "/campgrounds/<%= campground.id %>/comments">
				<div class = "form-group">
					<input class = "form-control" name = "comment[text]" type = "text" placeholder = "Comment">
				</div>
				
				<div class = "form-group">
					<input class = "btn btn-lg btn-default btn-block btn-primary" type = "submit">
				</div>				
			</form>			
			<A href = "/campgrounds/<%= campground.id%>">Back</A></div>			
	</div>		
</div>
<%- include("../partials/footer")%>