<%- include("../partials/header")%>
<main class = "container">
	<section class = "row">
		<h1 style = "text-align:center">Users</h1>
		<div style = "width: 60%; margin: 15px auto;">
		</div>
	</section>
	<% if (users){%>
	<section>		
		<div class = "container">	
			<hr>
			
			<table class="table table-hover">
				<thead>
					<tr>
						<th>User Name</th>
						<th>Email</th>
						<th>Activate/Deactivate</th>
					
					</tr>
				</thead>
				<tbody>
					<% 
					users.forEach(function(user){ %>
					<tr>
						<td style = "vertical-align:middle;"><%= user.username%></td>
						<td style = "vertical-align:middle;"><%= user.email%>
							
						</td>
						<% 
						
						if(user.isActivated == 1){
							
						%>
							
							<td><form method="POST" action = "/users/activate/<%=user._id%>"><input name = "type" class = "btn btn-sm btn-default  btn-primary" type = "submit" value = "Deactivate"><input type = "hidden" name = "email" value = "<%= user.email%>"></form></td>
					
						<% }else{%>
							<td><form method="POST" action = "/users/activate/<%=user._id%>"><input name = "type" class = "btn btn-sm btn-default  btn-primary" type = "submit" value = "Activate"><input type = "hidden" name = "email" value = "<%= user.email%>"></form></td>
						<% }%>						
						
					</tr>
					<% }); %>
				</tbody>
			</table>
			
			<hr>
		</div>
	 </section>
	<%}%>
</main>
<script type="text/javascript" src = "/js/scripts.js"></script>
<%- include("../partials/footer")%>