<%- include("../partials/header")%>
<main class = "container">
	<section class = "row">
		<h1 style = "text-align:center">Collections</h1>
	</section>
	<% if (collections){%>
	<section>				
		<div class = "container">	
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Collection Name</th>
						<th>No. of Songs</th>
						<th>Decscription</th>						
						<th>&nbsp;</th>
					</tr>
				</thead>
				<tbody>
					<% 
					let x = 0;
					let y = 1;
					collections.forEach(function(collection){ %>
					<tr>
						<td style = "vertical-align:middle"><%= collection.name%></td>
						<td><%=collection.songs.length%></td>
						<td><%= collection.description%></td>
						
						<td><a class="btn btn-warning btn-sm" role="button" href = "/collections/<%= collection._id %>/edit">
  Edit
							</a></td>
					</tr>
					
					 <% }); %>
				</tbody>

			</table>
			<hr>
			
		</div>
	 </section>
	<% x++;}%>
</main>
<script type="text/javascript" src = "/js/scripts.js"></script>
<%- include("../partials/footer")%>