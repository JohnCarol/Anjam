<%- include("../partials/header")%>
<div class = "container">
	<div class = "row">
		<h1 style = "text-align:center">Editing Collection - "<%=collection.name%>"</h1>
		<div style = "width: 30%; margin: 25px auto;">			
			<form method = "POST" action = "/collections/<%=collection.id%>?_method=PUT">
				<div class = "form-group">
					<label for = "name">Name</label>
					<input class = "form-control" name = "collection[name]" value = "<%=collection.name%>" id ="name" type = "text" required>
				</div>
				<div class = "form-group">
					<label for = "description">Description</label>
					<textarea class = "form-control" name = "collection[description]" id = "description" type = "text"><%=collection.description%></textarea>	
				</div>								
				<div class = "form-group">
					<input class = "btn btn-lg btn-default btn-block btn-primary" value = "Update" type = "submit">
				</div>				
			</form>	
			
			<A href = "/song/new">Back</A></div>			
	</div>		
</div>
<%- include("../partials/footer")%>